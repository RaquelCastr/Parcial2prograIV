<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButPerro"
        android:layout_width="167dp"
        android:layout_height="254dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="24dp"
        android:onClick="seleccionarMascota"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageButGato"
        app:layout_constraintEnd_toStartOf="@+id/imageButcotorro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/perro1" />

    <ImageButton
        android:id="@+id/imageButGato"
        android:layout_width="389dp"
        android:layout_height="213dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="332dp"
        android:onClick="seleccionarMascota"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButcotorro"
        app:srcCompat="@drawable/gato" />

    <ImageButton
        android:id="@+id/imageButcotorro"
        android:layout_width="214dp"
        android:layout_height="254dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="22dp"
        android:onClick="seleccionarMascota"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageButGato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButPerro"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cotorro" />

</androidx.constraintlayout.widget.ConstraintLayout>